<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler,log4net" />
  </configSections>
  <log4net>
    <appender name="ByteLog" type="log4net.Appender.RollingFileAppender">
      <file value="Log/ByteLog.txt" />
      <appendToFile value="true"/>
      <rollingStyle value="Size"/>
      <maximumFileSize value="5MB"/>
      <maxSizeRollBackups value="5"/>
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date{yyyy.MM.dd. HH:mm:ss.fff} %-5level %3t %message%newline"/>
      </layout>
    </appender>
    <appender name="JsonLog" type="log4net.Appender.RollingFileAppender">
      <file value="Log/JsonLog.log" />
      <appendToFile value="true"/>
      <rollingStyle value="Size"/>
      <maximumFileSize value="5MB"/>
      <maxSizeRollBackups value="5"/>
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date{yyyy.MM.dd. HH:mm:ss.fff} %-5level %3t %message%newline"/>
      </layout>
    </appender>
    <!--<root>
      <level value="ALL" />
      <appender-ref ref="SomeName" />
    </root>-->
    <logger name="ByteLog">
      <level value="ALL"/>
      <appender-ref ref="ByteLog" />
    </logger>
    <logger name="JsonLog">
      <level value="ALL"/>
      <appender-ref ref="JsonLog" />
    </logger>
  </log4net>
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.7.2" />
  </startup>
</configuration>